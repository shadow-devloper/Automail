<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    @style/SpinKitView
    @style/SpinKitView.Circle
    @style/SpinKitView.Large
    @style/SpinKitView.Small
    @style/SpinKitView.Small.DoubleBounce

    <style name="A_WhiteButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@color/white</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="A_BlueButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/blue_primary</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="A_WhiteUnderlinedText"
        parent="@android:style/Widget.EditText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
